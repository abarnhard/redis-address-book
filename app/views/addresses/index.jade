extends ../shared/template
block content
  h2 Addresses
  .panel.panel-default
    .panel-body
      .row
        .col-xs-12
          table.table
            thead
              tr
                th Name
                th Email
                th Color
            tbody
              each address in addresses
                tr
                  td= address.name
                  td= address.email
                  td
                    div(style='background-color:#{address.color};margin:5px') &nbsp;

block scripts

