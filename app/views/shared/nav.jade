.navbar.navbar-default(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Address Book

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        unless user
          li: a(href='/login') Log In
          li: a(href='/register') Register User
          li: a(href='#') Anonymous
        else
          li
            form.navbar-form(method='post', action='/logout')
              input(type='hidden', name='_method', value='delete')
              .form-group
                button.btn.btn-danger.btn-sm= user.email

